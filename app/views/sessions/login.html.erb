

<div class = "contenitore">


    <div class = "null">
    </div>

    <% flash.each do |type, msg| %>
        <div class = "login_alert">
            <%= msg %>
        </div>
    <% end %>


    <div class = "login_form">
        <div class = "login_titolo">
            Accedi
        </div>

            
        <%= form_tag '/login' do%>
            
            <div class = "login_email">
                Email: 
            </div>

            <%= text_field_tag :email , "" ,class: "login_text" %>
   
            

        
            <div class = "login_email">
                Password: 
            </div>


            <%= password_field_tag :password , "" ,class: "login_text" %>

  

            <%= submit_tag "Accedi" ,class: "nav-btn login_btn" %>
        

        <% end %>

        <br>

        <%= button_to "Torna alla Home", home_index_path, class:"nav-btn", method: :get %>

    </div>


</div>


