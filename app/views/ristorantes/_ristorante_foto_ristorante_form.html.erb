<div class="nested-form-wrapper" data-new-record="<%= f.object.new_record? %>">
    <div class="form-group ">
        <%= f.label :url %>
        <%= f.text_field :url ,class:"form-control" ,placeholder:"Inserisci il link come descritto sopra" %>
    </div>

    <button type="button" data-action="nested-form#remove">Remove foto</button>

    <%= f.hidden_field :_destroy %>
</div>
