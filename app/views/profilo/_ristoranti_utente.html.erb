<div class="dati-utente" >
  <% @ristoranti.each do |ristorante|%>
            <div class= "result_box">
            <%= link_to ristorante do%>
            <div class="result_image"> 
                <img src="<%= ristorante.foto_ristorantes.first.url %>" style="width:100px;height:100px;border-radius:5px" >
            </div>
            <% end %>
            <div class="info-ristorante"> 
                 
                <h4> <%= link_to ristorante.nome, ristorante, style:"text-decoration:none;color:black" %></h4>
                <%= link_to edit_ristorante_path(ristorante), class:"icons", method: :get do %>
                    <i class="fa-solid fa-pen-to-square"></i>
                <% end %>
                <%= link_to ristorante_path(ristorante), class:"icons", :method => 'delete' do %>
                    <i class="fa-solid fa-trash"></i>
                <% end %>
                <br>
                <span>Aggiunto il <%= ristorante.created_at.strftime("%d-%m-%Y") %></span>
                 
            </div>
        </div>
        <% end %>

</div>
        <div id="pag">
         <%= paginate @ristoranti %>
         </div>